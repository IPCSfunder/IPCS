<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="com.ipcs.model.Person" table="PERSON">
        <id name="objectId" type="java.lang.Long">
            <column name="person_objid" />
            <generator class="native" />
        </id>
        <property name="account_name" type="string">
            <column name="account_name" length="45" not-null="true" />
        </property>
        <property name="password_hash" type="string">
            <column name="password_hash" length="45"/>
        </property>
        
        <property name="createdTime" type="date">
            <column name="date_created"/>
        </property>
        
        <property name="modifiedTime" type="date">
            <column name="date_modified"/> 
        </property>
        
        
        <set cascade ="all-delete-orphan" name="roles" table="person_role" lazy="true">  
            <key column="person_fk" />  
            <many-to-many class="com.ipcs.model.Role" column="role_fk" />  
        </set>  
        
        <many-to-one name="contact" column="contact_fk" unique="true" cascade ="all-delete-orphan"
        class="com.ipcs.model.Contact"/>
    </class>
</hibernate-mapping>