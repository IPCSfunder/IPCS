<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

    <!-- Hibernate session factory -->
    <bean id="sessionFactory" class="org.springframework.orm.hibernate4.LocalSessionFactoryBean">

        <property name="dataSource">
            <ref bean="dataSource"/>
        </property>

        <property name="hibernateProperties">
            <props>
                <prop key="hibernate.dialect">org.hibernate.dialect.MySQLDialect</prop>
                <prop key="hibernate.show_sql">true</prop>
                <!-- <prop key="hibernate.current_session_context_class">thread</prop> -->
            </props>
        </property>

        <property name="mappingResources">
            <list>
                <value>mapping/Person.hbm.xml</value>
                <value>mapping/Role.hbm.xml</value>
                <value>mapping/Contact.hbm.xml</value>
                <value>mapping/PersonDetail.hbm.xml</value>
                <value>mapping/SchoolType.hbm.xml</value>
                <value>mapping/School.hbm.xml</value>
                <value>mapping/Permission.hbm.xml</value>
                <value>mapping/MessageType.hbm.xml</value>
                <value>mapping/Message.hbm.xml</value>
                <value>mapping/RelationshipType.hbm.xml</value>
                <value>mapping/Relationship.hbm.xml</value>
                <value>mapping/Class.hbm.xml</value>
                <value>mapping/Activity.hbm.xml</value>
            </list>
        </property>

    </bean>
</beans>