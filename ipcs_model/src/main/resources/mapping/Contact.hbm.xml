<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="com.ipcs.model.Contact" table="contact">
        <id name="objectId" type="java.lang.Long">
            <column name="contact_objid" />
            <generator class="native" />
        </id>
        <property name="address" type="string">
            <column name="address" length="255"/>
        </property>

        <property name="postcode" type="string">
            <column name="postcode" length="45"/>
        </property>

        <property name="contacterName" type="string">
            <column name="contact_name" length="45"/>
        </property>

        <property name="primary" type="boolean">
            <column name="primary_contact"/>
        </property>
        
        <property name="mobileNumber" type="string">
            <column name="mobile_number" length="45"/>
        </property>
        
        <property name="emailAddress" type="string">
            <column name="email_address" length="45"/>
        </property>
        
        <property name="createdTime" type="date">
            <column name="date_created"/>
        </property>
        
        <property name="modifiedTime" type="date">
            <column name="date_modified"/> 
        </property>

        <many-to-one name="relationshipType" column="relationship_type_fk"
                     class="com.ipcs.model.RelationshipType"/>

        <many-to-one name="person" column="person_fk"
                     class="com.ipcs.model.Person"/>
    </class>
</hibernate-mapping>