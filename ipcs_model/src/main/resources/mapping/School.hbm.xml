<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="com.ipcs.model.School" table="school">
        <id name="objectId" type="java.lang.Long">
            <column name="school_objid" />
            <generator class="native" />
        </id>
        <property name="name" type="string">
            <column name="name" />
        </property>
        
        <property name="address" type="string">
            <column name="address" length="45"/>
        </property>
        
        <property name="createdTime" type="date">
            <column name="date_created"/>
        </property>
        
        <property name="modifiedTime" type="date">
            <column name="date_modified"/> 
        </property>
        
        <many-to-one name="type" column="school_type_fk"
        class="com.ipcs.model.SchoolType"/>
        
        <bag name="persons" table="person_school" lazy="true">
            <key column="school_fk" />  
            <many-to-many class="com.ipcs.model.Person" column="person_fk" />  
        </bag>


        <bag name="activities" cascade="all-delete-orphan">
            <key column="school_fk"/>
            <one-to-many class="com.ipcs.model.Activity"/>
        </bag>

    </class>
</hibernate-mapping>