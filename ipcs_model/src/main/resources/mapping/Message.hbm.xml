<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="com.ipcs.model.Message" table="message">
        <id name="objectId" type="java.lang.Long">
            <column name="message_objid" />
            <generator class="native" />
        </id>

        <property name="header" type="string">
            <column name="header" />
        </property>
        
        <property name="content" type="string">
            <column name="content" length="2500"/>
        </property>

        <property name="attachmentAddress" type="string">
            <column name="attachment_address" length="255"/>
        </property>

        <property name="sentTime" type="date">
            <column name="sent_time"/>
        </property>

        
        <property name="createdTime" type="date">
            <column name="date_created"/>
        </property>
        
        <property name="modifiedTime" type="date">
            <column name="date_modified"/> 
        </property>
        
        <many-to-one name="messageType" column="message_type_fk"
        class="com.ipcs.model.MessageType"/>


        <many-to-one name="fromUser" column="from_user"
                     class="com.ipcs.model.Person"/>

    </class>
</hibernate-mapping>