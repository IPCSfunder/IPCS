<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="com.ipcs.model.Activity" table="activity">
        <id name="objectId" type="java.lang.Long">
            <column name="activity_objid" />
            <generator class="native" />
        </id>

        <property name="name" type="string">
            <column name="name" />
        </property>
        
        <property name="location" type="string">
            <column name="location" length="255"/>
        </property>

        <property name="description" type="string">
            <column name="description" length="255"/>
        </property>

        <property name="startTime" type="date">
            <column name="start_time"/>
        </property>

        
        <property name="createdTime" type="date">
            <column name="date_created"/>
        </property>
        
        <property name="modifiedTime" type="date">
            <column name="date_modified"/> 
        </property>

        <many-to-one name="host" column="host"
                     class="com.ipcs.model.Person"/>


        <bag name="persons" table="schedule" lazy="true">
            <key column="activity_fk" />
            <many-to-many class="com.ipcs.model.Person" column="person_fk" />
        </bag>

        <many-to-one name="school" column="school_fk"
                     class="com.ipcs.model.School"/>

    </class>
</hibernate-mapping>