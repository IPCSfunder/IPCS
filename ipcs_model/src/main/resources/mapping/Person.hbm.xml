<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="com.ipcs.model.Person" table="person">
        <id name="objectId" type="java.lang.Long">
            <column name="person_objid"/>
            <generator class="native"/>
        </id>
        <property name="account_name" type="string">
            <column name="account_name" length="45" not-null="true"/>
        </property>
        <property name="password_hash" type="string">
            <column name="password_hash" length="45"/>
        </property>

        <property name="createdTime" type="date">
            <column name="date_created"/>
        </property>

        <property name="modifiedTime" type="date">
            <column name="date_modified"/>
        </property>


        <bag name="roles" table="person_role" lazy="true">
            <key column="person_fk"/>
            <many-to-many class="com.ipcs.model.Role" column="role_fk"/>
        </bag>

        <bag name="activities" table="schedule" lazy="true">
            <key column="person_fk"/>
            <many-to-many class="com.ipcs.model.Activity" column="activity_fk"/>
        </bag>

        <bag name="relationships" cascade="all-delete-orphan" lazy="true" inverse="true">
            <key column="whose"/>
            <one-to-many class="com.ipcs.model.Relationship"/>
        </bag>


        <bag name="schools" table="person_school" lazy="true">
            <key column="person_fk"/>
            <many-to-many class="com.ipcs.model.School" column="school_fk"/>
        </bag>

        <bag name="contacts" cascade="all-delete-orphan" lazy="true">
            <key column="person_fk"/>
            <one-to-many class="com.ipcs.model.Contact"/>
        </bag>


        <many-to-one name="personDetail" column="person_detail_fk" unique="true" cascade="all-delete-orphan"
                     class="com.ipcs.model.PersonDetail"/>
    </class>
</hibernate-mapping>