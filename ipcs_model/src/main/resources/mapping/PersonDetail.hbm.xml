<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="com.ipcs.model.PersonDetail" table="person_detail">
        <id name="objectId" type="java.lang.Long">
            <column name="person_detail_objid" />
            <generator class="native" />
        </id>
        <property name="last_name" type="string">
            <column name="last_name"/>
        </property>
        
        <property name="fist_name" type="string">
            <column name="fist_name" />
        </property>
        
         <property name="age" type="int">
            <column name="age" />
        </property>
        
         <property name="sex">
            <type name="org.hibernate.type.EnumType">
         		<param name="enumClass">com.ipcs.model.PersonDetail$Sex</param>
     		 </type>
        </property>
        
         <property name="nationality" type="string">
            <column name="nationality" />
        </property>
        
         <property name="date_of_birth" type="date">
            <column name="dob" />
        </property>
        
         <property name="nric" type="string">
            <column name="nric" />
        </property>
        
         <property name="nick_name" type="string">
            <column name="nick_name" />
        </property>
        
        
        <property name="market_option">
            <column name="market_option" sql-type="BOOLEAN" not-null="true"/>
        </property>
        
        <property name="createdTime" type="date">
            <column name="date_created"/>
        </property>
        
        <property name="modifiedTime" type="date">
            <column name="date_modified"/> 
        </property>
        
        <one-to-one name="person" property-ref="personDetail" cascade ="all-delete-orphan"/>  
    </class>
</hibernate-mapping>